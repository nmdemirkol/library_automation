@model IEnumerable<_16330456Otomasyon.Models.Kitap>

@{
    ViewBag.Title = "Kitaplar";
}

<div class="row">  
    <p style="padding:0 20px;">
        @Html.ActionLink("Yeni Kitap Ekle", "Create")
    </p>
    
@foreach (var item in Model)
{
    
    <div class="col-md-6 col-sm-12" >
        <div class="info-box" style="display:table; min-height:auto;border:1px solid #ddd;">
            
            <div class="col-md-3 col-sm-12">
                <img src="~/Content/Resimler/@Html.DisplayFor(modelItem => item.Resim)" style="margin:10px 0; max-width:100%;"/>
                </div>
            <div class="col-md-9 col-sm-12">
                <div class="" style="min-height:200px; ">
                    <table style="width:100%;">
                        <tr>
                            <td style="padding:5px;"><span class="info-box-number" style="font-size:14px;">@Html.DisplayNameFor(model => model.KitapAdi)</span></td>
                            <td style="padding:5px;">:</td>
                            <td style="padding:5px;"><span class="info-box-text">@Html.DisplayFor(modelItem => item.KitapAdi)</span></td>
                        </tr>
                        <tr>
                            <td style="padding:5px;"><span class="info-box-number" style="font-size:14px;">@Html.DisplayNameFor(model => model.KitapYazar)</span></td>
                            <td style="padding:5px;">:</td>
                            <td style="padding:5px;"><span class="info-box-text">@Html.DisplayFor(modelItem => item.KitapYazar)</span></td>
                        </tr>

                        <tr>
                            <td style="padding:5px;"><span class="info-box-number" style="font-size:14px;">@Html.DisplayNameFor(model => model.YayinTarihi)</span></td>
                            <td style="padding:5px;">:</td>
                            <td style="padding:5px;"><span class="info-box-text">@Html.DisplayFor(modelItem => item.YayinTarihi)</span></td>
                        </tr>
                    </table></div>
                    <div style="position:absolute; right:40px; bottom:30px; font-size:16px;">
                        @Html.ActionLink("Düzenle", "Edit", new { id = item.Id }) |
                        @Html.ActionLink("Detay", "Details", new { id = item.Id }) |
                        @Html.ActionLink("Sil", "Delete", new { id = item.Id })
                    </div>
                </div>
                <!-- /.info-box-content -->
            </div>
        <!-- /.info-box -->
    </div>
}

</div>
